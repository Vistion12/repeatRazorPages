@page
@using repeatRazorPages.Pages.Pokemons
@model AddModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form method="post">
	<div>
		<label>Имя покемона</label>
		<input asp-for="Pokemon.Name" type="text" />
		<span asp-validation-for="Pokemon.Name" class="text-danger"></span>
	</div>
	<div>
		<label>ссылка на фото</label>
		<input asp-for="Pokemon.URL" type="text" />
		<span asp-validation-for="Pokemon.URL" class="text-danger"></span>
	</div>
	<div>
		<label>описание</label>
		<input asp-for="Pokemon.Description" type="text" />
		<span asp-validation-for="Pokemon.Description" class="text-danger"></span>
	</div>
	<div>
		<label>уровень</label>
		<input asp-for="Pokemon.Level" type="text" />
		<span asp-validation-for="Pokemon.Level" class="text-danger"></span>
	</div>
	<input type="submit"/>

</form>
@page
@using repeatRazorPages.Pages.Pokemons
@model DetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="cd__main">
	<div class="container my-5">
		<div class="row">
			<div class="col-md-5">
				<div class="main-img">
					<img class="img-fluid" src="@Model!.Pokemon!.URL" alt="@Model.Pokemon.Name">
				</div>
			</div>
			<div class="col-md-7">
				<div class="main-description px-2">
					<div class="category text-bold">
						Название: @Model.Pokemon.Name
					</div>
					<div class="product-title text-bold my-3">
						Описание: @Model.Pokemon.Description
					</div>
					<div class="price-area my-4">
						Уровень покемона: @Model.Pokemon.Level
					</div>
					<a class="btn btn-primary" asp-page="./Index">Назад</a>
				</div>
			</div>
		</div>

	</div>
</div>
